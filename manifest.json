{
    "name": "Disable Automatic Gain Control",
    "version": "1.2",
    "description": "Disables the automatic microphone gain control enabled by web applications like Google Meet and Hangouts.",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "disableAutogain.js"
    ],
    "browser_action": {},
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "optional_permissions": [
        "http://*/",
        "https://*/"
    ]
}
